{
  "$id": "https://youtrack.demo.app.com/settings.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "YouTrack Demo application settings",
  "description": "Define what settings should be used",
  "properties": {
    "name": {
      "title": "Name",
      "type": "string",
      "minLength": 1
    },
    "password": {
      "title": "Password",
      "type": "string",
      "writeOnly": true,
      "format": "secret"
    },
    "birthDate": {
      "title": "Birth date",
      "type": "string",
      "format": "date"
    },
    "autorefresh": {
      "title": "Should we autorefresh the page?",
      "type": "boolean"
    },
    "rating": {
      "title": "Rating",
      "type": "integer",
      "maximum": 5
    },
    "recurrence": {
      "title": "Recurrence",
      "type": "string",
      "enum": ["Never", "Daily", "Weekly", "Monthly"]
    },
    "perProjectValue": {
      "title": "A value that can be only set on Project level",
      "type": "string",
	    "x-scope": "project"
    },
    "globalOnlyValue": {
      "title": "A value that can be only set on Global level",
      "type": "string",
	    "x-scope": "global"
    },
    "entity": {
      "title": "User",
      "type": "object",
      "x-entity": "User"
    },
    "projects": {
      "title": "Some project",
      "type": "array",
      "items": {
        "x-entity": "Project",
        "type": "object"
      }
    }
  }
}
